---
import I18nKeys from "../../locales/keys";
import { i18n } from "../../locales/translation";

export interface Props {
  year: number;
  count: number;
}

const { year, count } = Astro.props;
---

<div class="mb-2 flex w-full flex-row items-center">
  <div class="flex w-[15%] flex-row justify-end md:w-[10%]">
    <p class="year select-none text-2xl font-bold text-[var(--text-color)]">
      {year}
    </p>
  </div>
  <div class="dash-line relative flex h-full w-[15%] items-center md:w-[10%]">
    <div
      class="outline-3 z-50 mx-auto h-3 w-3 rounded-full bg-[var(--card-color)] bg-none outline -outline-offset-[2px] outline-[var(--primary-color)]"
    >
    </div>
  </div>
  <div>
    <p class="count select-none text-[var(--text-color-lighten)]">
      {i18n(I18nKeys.archive_year_title_count, count.toString())}
    </p>
  </div>
</div>
<style>
  .year {
    font-family: var(--primary-font);
  }

  .count {
    font-family: var(--primary-font);
  }

  .dash-line::before {
    @apply absolute top-1/2 h-[24px] w-[10%] border-l-2 border-dashed border-l-[var(--text-color)] opacity-25 content-[''];
    left: calc(50% - 1px);
  }
</style>
