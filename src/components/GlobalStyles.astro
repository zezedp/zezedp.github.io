---
import "../styles/animations.css";
import "../styles/scrollbar.css";
import "../styles/transitions.css";
import "../styles/searchbar.css";
import "overlayscrollbars/overlayscrollbars.css";
---

<style is:global>
  :root {
    --hue: 60;

    --primary-color: #ffb86c; /* cor de destaque */
    --primary-color-lighten: #333333; /* tom mais claro de destaque */
    --primary-color-hover: #424455; /* cor ao passar o mouse */
    --primary-color-transparent: rgba(255, 184, 108, 0.15); /* cor transparente de destaque */
    --text-color: #fb923c; /* cor do texto */
    --text-color-lighten: #e0e0e0; /* texto mais claro */
    --card-color: #1e1e1e; /* cor de fundo dos cards */
    --card-color-transparent: rgba(30, 30, 30, 0.85); /* fundo transparente para cards */
    --background-color: #282424; /* fundo geral */
    --border-color: #44475a; /* cor das bordas */
    
    --brand-font: "Raleway", "Noto Sans SC", sans-serif;
    --primary-font: "Noto Sans SC", sans-serif;
    --code-font: "JetBrains Mono", "Fira Code", monospace;

    --page-width-lg: 992px;
    --page-width-xl: 1264px;

    --banner-height: 45vh;
    --title-font: var(--brand-font);
    --title-color: #ffffff;/*#ffb86c;  cor dos títulos */
    --subtitle-font: var(--brand-font);
    --subtitle-color: #ff5555; /* cor dos subtítulos */

    --onload-animation-delay: 100ms;
    --onload-animation-interval: 100ms;
  }

    :root.dark {
    --primary-color: #ffb86c;
    --primary-color-lighten: #333333;
    --primary-color-hover: #333333;
    --text-color: #fb923c; /*#f8f8f2;*/
    --text-color-lighten: #e0e0e0;
    --card-color: #1e1e1e;
    --card-color-lighten: #333333;
    --card-color-transparent: rgba(30, 30, 30, 0.85);
    --background-color: #282424;
    
    --border-color: #44475a;
  }


  ::selection{
	  background-color: #fb923c;
	  color: #1a1a1a;
  }

  .swup-progress-bar {
    height: 5px;
    background-color: var(--primary-color);
  }
</style>

